<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Customized PSR-12 Rule"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="https://github.com/squizlabs/PHP_CodeSniffer/raw/master/phpcs.xsd">
  <description>コーディングルール／整形設定（PSR-12準拠）</description>

  <!-- display progress -->
  <arg value="p"/>
  <!-- use colors in output -->
  <arg name="colors"/>
  <!-- 拡張子が php のものにだけ適用 -->
  <arg name="extensions" value="php" />
  <!-- オプション p:進捗表示  s:エラー表示時にルールを表示 -->
  <arg value="ps" />
  <!-- rule に PSR12 を指定可能 -->
  <rule ref="PSR12" />

  <!-- Paths to check -->
  <file>app</file>
  <file>bootstrap</file>
  <file>database</file>
  <file>routes</file>
  <file>tests</file>
</ruleset>
